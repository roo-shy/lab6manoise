<%= render "layouts/header" %>
<div class="container">

  <div class="col-md-4">
    <h1>Users</h1>
    <% @user.each do |user| %>
</br>
<ul>
  <li>
    <strong><%= link_to user.username, user_path(id: user.id) %></strong>
  </li>
  <% user.manoises.reverse.each do |mn|  %>
  <%=link_to image_tag(mn.user.image_url, size: "50"),mn.user %>

  <li>
    <small><%=mn.post%></small>
  </li>
</ul>

<% break %>
<% end%>
<% if user.following? user %>
<%= link_to "Stop Following", stop_follow_user_path(id: user.id), method: :post %>
<% else %>
<%= link_to "Follow", follow_user_path(id: user.id), class:"btn btn-primary", method: :post%>
</br>
</br>
<% end %>
<%end %>

<nav><%= paginate @user %></nav>
</div>
</div>
